{
  "name": "star-wars",
  "private": true,
  "version": "0.0.0",
  "description": "A gaming app with HTML5 and CSS3",
  "repository": "https://github.com/nishants/star-wars",
  "license": "WTFPL",
  "devDependencies": {
    "bower": "^1.7.7",
    "browserify": "^14.0.0",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.8",
    "karma-junit-reporter": "^0.4.1"
  },
  "scripts": {
    "postinstall": "bower install",

    "scss": "scss src/style/index.scss:dist/css/index.css",
    "jade": "jade --pretty src/index.jade -o dist",
    "js": "browserify src/app/app.js -o dist/js/app.js",

    "compile": "npm run scss && npm run jade && npm run js",
    "test-watch": "karma start karma.conf.js",
    "test": "karma start karma.conf.js --single-run",
    "start": "http-server -a localhost -p 8000 -c-1 ./dist"
  }
}
